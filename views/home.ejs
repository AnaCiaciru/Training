<script>
    function shuffle(a) {
        let j, x, i;
        for (i = a.length - 1; i > 0; i--) {
            j = Math.floor(Math.random() * (i + 1)); // [(0,1)* (i+1)]
            x = a[i];
            a[i] = a[j];
            a[j] = x;
        }
        return a;
    }

    let arr = ["Sa ai o zi frumoasa!", "Sesiune usoara!", "Nu uita sa uzi florile!", "Zambeste astazi!", "Cineva te iubeste!", "Azi e o zi norocoasa!",
    "Training-urile sunt frumoase!", "Cineva se gandeste la tine!", "Da totul din tine astazi!", "Spune 'nu' astazi!"];
    shuffle(arr);
    let par = document.createElement("p");
    let txt = document.createTextNode(arr[0]);
    par.appendChild(txt);
    document.getElementById("list").appendChild(par);

</script>

